@{


    if (IsPost)
    {

        string cId = Request["cId"];
        string ChapterName = Request["ChapterName"];


        RTUDB a = new RTUDB();
        a.QuickBind(new string[] { ChapterName, cId});
        a.NonQuery("UPDATE chapter_tbl SET chapter_desc = @1 where chapt_id = @2");
        a.CloseConnection();
    }
}